# rcntec

csrgen-rcntec() {
    if [ -z $1 ]; then
        echo "Specify FQDN"
        return 1
    fi

    openssl req -newkey rsa:2048 -sha256 -nodes -keyout "${1}.key" -out "${1}.csr" -subj "/C=RU/ST=Moscow/O=RCNTEC/CN=${1}/emailAddress=webmaster@${1}"
    openssl x509 -req -days 365 -in "${1}.csr" -signkey "${1}.key" -out "${1}.crt"
}

