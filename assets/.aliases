crypt() {
    echo "Crypt into file $1: $2"
    echo "$2" | openssl enc -aes-256-cbc -salt > "$1"
}

decrypt() {
    echo "Decrypt file $1"
    openssl enc -aes-256-cbc -d -in "$1"
}

